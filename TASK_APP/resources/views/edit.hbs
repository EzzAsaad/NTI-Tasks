{{>header}}
{{#if err}}
<div class="alert alert-danger">There is Problem in this Page</div>
{{else}}
<div class="container">
  <center><h1>Edit Task</h1></center>
  <div class="row">
    <div class="mx-auto col-6">
      <form method="POST" action="http://localhost:8000/tasks/edit" >
        <input type="hidden" name="id" value={{resData.data.id}}>
        <div class="form-group">
          <label>Title</label>
          <input type="text" value={{resData.data.title}} class="form-control" id="title" name="title" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">content</label>
          <input type="text"  value={{resData.data.content}} name="content" class="form-control" id="content" placeholder="content">
        </div>
        {{!-- <input type="hidden" name="status" value={{resData.data.status}}> --}}
        <button type="submit" class="btn btn-success">Edit Task</button>
      </form>  
    </div>
    
  </div>
</div>
{{/if}}
{{>footer}}